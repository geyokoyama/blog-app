<div class="flex flex-col">
  <p style="color: green"><%= notice %></p>

  <h1 class="hidden">Articles</h1>

  <div id="articles">
    <% @articles.each do |article| %>
      <%= render article %>

      <p>
        <%= link_to "Show this article", article %>
      </p>

    <% end %>
  </div>

</div>
